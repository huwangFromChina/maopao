<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <com.example.maopao.cla.CircleImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:id="@+id/detail_back"/>
    
    <com.example.maopao.cla.CircleImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/po"
        android:id="@+id/detail_portrait"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="maopao"
        android:id="@+id/detail_name"/>
    
    <View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#DCDCDC"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/s"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        android:id="@+id/detail_image1"/>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名"
        android:layout_toRightOf="@id/detail_image1"
        android:layout_marginLeft="10dp"
        android:id="@+id/detail_text1"/>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/detail_content1"
        android:text="test"/>
    </RelativeLayout>
    
    
    <View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#DCDCDC"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/s"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:id="@+id/detail_image2"/>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="个人简介"
        android:layout_toRightOf="@id/detail_image2"
        android:layout_marginLeft="10dp"
        android:id="@+id/detail_text2"/>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/detail_content2"
        android:text="test"/>
    </RelativeLayout>
    
    <View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#DCDCDC"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/s"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        android:id="@+id/detail_image3"/>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建时间"
        android:layout_toRightOf="@id/detail_image3"
        android:layout_marginLeft="10dp"
        android:id="@+id/detail_text3"/>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/detail_content3"
        android:text="test"/>
    </RelativeLayout>
    
  <View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#DCDCDC"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/s"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:id="@+id/detail_image4"/>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="性别"
        android:layout_toRightOf="@id/detail_image4"
        android:layout_marginLeft="10dp"
        android:id="@+id/detail_text4"/>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/detail_content4"
        android:text="test"/>
    </RelativeLayout>

    <View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#DCDCDC"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/s"
        android:layout_marginLeft="5dp"
        android:gravity="left"
        android:id="@+id/detail_image5"/>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机号"
        android:layout_toRightOf="@id/detail_image5"
        android:layout_marginLeft="10dp"
        android:id="@+id/detail_text5"/>
        <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:id="@+id/detail_content5"
        android:text="test"/>
    </RelativeLayout>
    
    <View  android:layout_height="1px" 
           android:layout_width="match_parent"
           android:background="#DCDCDC"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/detail_add"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundbutton"
            android:textColor="#eee"
            android:layout_marginLeft="10dp"
            android:text="统一 "/>
        
        <Button 
            android:id="@+id/detail_remove"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundbutton"
            android:textColor="#eee"
            android:text="不同意"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp" />

    </RelativeLayout>
</LinearLayout>
